<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
</head>
<style>
  body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-image: url('https://cdn.pixabay.com/photo/2024/04/19/12/13/ai-generated-8706226_640.png');
      background-size: cover;
      background-position: center;
      color: #333;
  }

  h1 {
      color: white;
      text-align: center;
      margin: 20px 0;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
  }

  form {
      background-color: rgba(255, 255, 255, 0.7);
      border-radius: 10px;
      padding: 20px;
      margin: 20px auto;
      max-width: 400px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  form input, form button {
      width: calc(100% - 20px);
      margin: 10px auto;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
  }

  form button {
      background-color: #007bff;
      color: #fff;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
  }

  form button:hover {
      background-color: #0056b3;
  }

  table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: rgba(255, 255, 255, 0.8);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  table th, table td {
      padding: 10px;
      text-align: center;
      border: 1px solid #ccc;
  }

  table th {
      background-color: #007bff;
      color: white;
  }

  table tbody tr:hover {
      background-color: rgba(0, 123, 255, 0.1);
  }

  table button {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
  }

  table button a {
      text-decoration: none;
      color: white;
  }

  table button:first-child {
      background-color: #28a745;
  }

  table button:first-child:hover {
      background-color: #218838;
  }

  table button:last-child {
      background-color: #dc3545;
  }

  table button:last-child:hover {
      background-color: #c82333;
  }
  form input {
      background-color: #f8f9fa;
  }
</style>
<body>
   <center><h1>The BookStore</h1></center>
   <form action="/addBook" method="post">
      <input type="text" placeholder="Enter Book Name" name="book">
      <input type="text" placeholder="Enter Auther Name" name="auther">
      <input type="text" placeholder="Enter Publish Date" name="publish">
      <input type="text" placeholder="Enter Book Price" name="price">
      <button type="submit">Add Book</button>
   </form>
   <br>
   <table border="1">
      <thead>
         <tr>
            <th>Book No.</th>
            <th>Name</th>
            <th>Auther</th>
            <th>Publish Year</th>
            <th>Price</th>
            <th colspan="2" style="text-align: center;">Actions</th>
         </tr>
      </thead>
      <tbody>
         <% books.map((e,i)=>{ %>
            <tr>
               <td><%=e.id%></td>
               <td><%=e.book%></td>
               <td><%=e.auther%></td>
               <td><%=e.publish%></td>
               <td><%=e.price%></td>
               <td>
                 <button><a href="/editBook/<%=e.id%>">Edit</a></button>
                 <button><a href="/deleteBook?id=<%=e.id%>">Delete</a></button>
               </td>
            </tr>
         <% }) %>
      </tbody>
   </table>
</body>
</html>